{
    "name": "digitaljs",
    "displayName": "DigitalJS",
    "description": "DigitalJS integration for VS Code",
    "version": "0.1.1",
    "license": "SEE LICENSE IN LICENSE",
    "publisher": "yuyichao",
    "repository": {
        "type": "git",
        "url": "https://github.com/yuyichao/digitaljs_code.git"
    },
    "engines": {
        "vscode": "^1.62.0"
    },
    "icon": "imgs/digitaljs.png",
    "categories": [
        "Debuggers",
        "Education",
        "Programming Languages",
        "Visualization",
        "Other"
    ],
    "keywords": [
        "verilog",
        "simulation"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/local-extension.js",
    "browser": "./dist/web-extension.js",
    "contributes": {
        "commands": [
            {
                "command": "digitaljs.openView",
                "title": "Open DigitalJS",
                "icon": "imgs/digitaljs.svg",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.openViewJSON",
                "title": "Open as circuit in DigitalJS",
                "icon": "imgs/digitaljs.svg",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.openViewSource",
                "title": "Add to DigitalJS",
                "icon": "imgs/digitaljs.svg",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.pause",
                "title": "Pause",
                "icon": "$(debug-pause)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.start",
                "title": "Start",
                "icon": "$(run)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.fastForward",
                "title": "Fast-forward",
                "icon": "$(run-all)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.singleStep",
                "title": "Single step",
                "icon": "$(debug-step-over)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.nextEvent",
                "title": "Run until next event",
                "icon": "$(debug-continue)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.newJSON",
                "title": "New Circuit",
                "icon": "$(new-file)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.openJSON",
                "title": "Open Circuit",
                "icon": "$(folder-opened)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.addFiles",
                "title": "Add Files",
                "icon": "$(add)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.saveJSON",
                "title": "Save Circuit",
                "icon": "$(save)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.saveAsJSON",
                "title": "Save As Circuit",
                "icon": "$(save-as)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.removeSource",
                "title": "Remove",
                "icon": "$(dash)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.stopScript",
                "title": "Stop script",
                "icon": "$(debug-stop)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.startScript",
                "title": "Start script",
                "icon": "$(debug-start)",
                "category": "DigitalJS"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "digitaljs.newJSON",
                    "when": "view == digitaljs-proj-files",
                    "group": "navigation@0"
                },
                {
                    "command": "digitaljs.openJSON",
                    "when": "view == digitaljs-proj-files",
                    "group": "navigation@1"
                },
                {
                    "command": "digitaljs.addFiles",
                    "when": "view == digitaljs-proj-files",
                    "group": "navigation@2"
                },
                {
                    "command": "digitaljs.saveJSON",
                    "when": "view == digitaljs-proj-files",
                    "group": "navigation@3"
                },
                {
                    "command": "digitaljs.saveAsJSON",
                    "when": "view == digitaljs-proj-files",
                    "group": "navigation@4"
                }
            ],
            "editor/title": [
                {
                    "command": "digitaljs.openView",
                    "when": "!digitaljs.view_isfocus",
                    "group": "navigation"
                },
                {
                    "command": "digitaljs.pause",
                    "when": "digitaljs.view_isfocus && digitaljs.view_hascircuit && digitaljs.view_running",
                    "group": "navigation@1"
                },
                {
                    "command": "digitaljs.start",
                    "when": "digitaljs.view_isfocus && digitaljs.view_hascircuit && !digitaljs.view_running",
                    "group": "navigation@2"
                },
                {
                    "command": "digitaljs.fastForward",
                    "when": "digitaljs.view_isfocus && digitaljs.view_hascircuit && !digitaljs.view_running",
                    "group": "navigation@3"
                },
                {
                    "command": "digitaljs.singleStep",
                    "when": "digitaljs.view_isfocus && digitaljs.view_hascircuit && !digitaljs.view_running",
                    "group": "navigation@4"
                },
                {
                    "command": "digitaljs.nextEvent",
                    "when": "digitaljs.view_isfocus && digitaljs.view_hascircuit && !digitaljs.view_running && digitaljs.view_pendingEvents",
                    "group": "navigation@5"
                }
            ],
            "explorer/context": [
                {
                    "command": "digitaljs.openViewJSON",
                    "when": "resourceExtname == .json",
                    "group": "navigation@99999"
                },
                {
                    "command": "digitaljs.openViewSource",
                    "when": "resourceExtname == .sv || resourceExtname == .v || resourceExtname == .vh || resourceExtname == .lua",
                    "group": "navigation@99999"
                }
            ],
            "view/item/context": [
                {
                    "command": "digitaljs.removeSource",
                    "when": "view == digitaljs-proj-files && viewItem != root-circuit",
                    "group": "inline"
                },
                {
                    "command": "digitaljs.startScript",
                    "when": "view == digitaljs-proj-files && viewItem in digitaljs.script_not_running",
                    "group": "inline"
                },
                {
                    "command": "digitaljs.stopScript",
                    "when": "view == digitaljs-proj-files && viewItem in digitaljs.script_running",
                    "group": "inline"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "digitaljs-container",
                    "title": "DigitalJS",
                    "icon": "imgs/digitaljs_mono.svg"
                }
            ]
        },
        "views": {
            "digitaljs-container": [
                {
                    "id": "digitaljs-proj-files",
                    "name": "Files",
                    "icon": "$(files)",
                    "when": "digitaljs.view_isactive",
                    "contextualTitle": "DigitalJS Files"
                },
                {
                    "id": "digitaljs-proj-synth",
                    "type": "webview",
                    "name": "Synthesis",
                    "icon": "$(gear)",
                    "when": "digitaljs.view_isactive",
                    "contextualTitle": "DigitalJS Synthesis"
                },
                {
                    "id": "digitaljs-proj-status",
                    "type": "webview",
                    "name": "Status",
                    "icon": "$(info)",
                    "when": "digitaljs.view_isactive",
                    "contextualTitle": "DigitalJS Status"
                }
            ]
        },
        "configuration": {
            "title": "DigitalJS",
            "properties": {
                "digitaljs.serverURL": {
                    "type": "string",
                    "default": "https://digitaljs.tilk.eu",
                    "description": "DigitalJS server URL"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm-run-all compile:*",
        "compile:views": "webpack --mode development",
        "watch": "npm-run-all watch:*",
        "watch:views": "webpack --watch --mode development",
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js",
        "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ."
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.62.0",
        "@vscode/test-electron": "^1.6.2",
        "@vscode/test-web": "^0.0.15",
        "css-loader": "^6.5.1",
        "eslint": "^8.1.0",
        "expose-loader": "^3.1.0",
        "glob": "^7.1.7",
        "jquery": "^3.6.0",
        "mini-css-extract-plugin": "^2.4.5",
        "mocha": "^9.1.3",
        "node-sass": "^7.0.1",
        "npm-run-all": "^4.1.5",
        "ovsx": "^0.2.1",
        "process": "^0.11.10",
        "sass-loader": "^12.4.0",
        "style-loader": "^3.3.1",
        "typescript": "^4.4.4",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.9.1"
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.27",
        "@vscode/webview-ui-toolkit": "^0.8.4",
        "3vl": "^1.0.0",
        "backbone": "^1.4.0",
        "crypto-browserify": "^3.12.0",
        "digitaljs": "github:yuyichao/digitaljs#dev",
        "digitaljs_lua": "^0.0.5",
        "path-browserify": "^1.0.1",
        "resize-observer-polyfill": "^1.5.1",
        "split-grid": "^1.0.11",
        "stream-browserify": "^3.0.0",
        "wavecanvas": "github:tilk/wavecanvas"
    }
}
