{
    "name": "digitaljs",
    "displayName": "DigitalJS",
    "description": "DigitalJS integration for VS Code",
    "version": "0.7.4",
    "license": "SEE LICENSE IN LICENSE",
    "publisher": "yuyichao / bsiever (updates)",
    "repository": {
        "type": "git",
        "url": "https://github.com/yuyichao/digitaljs_code.git"
    },
    "engines": {
        "vscode": "^1.62.0"
    },
    "icon": "imgs/digitaljs.png",
    "categories": [
        "Debuggers",
        "Education",
        "Programming Languages",
        "Visualization",
        "Other"
    ],
    "keywords": [
        "verilog",
        "simulation"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onCustomEditor:digitaljs.circuitView",
        "onCommand:digitaljs.openView",
        "onCommand:digitaljs.exportImage"
    ],
    "main": "./dist/local-extension.js",
    "browser": "./dist/web-extension.js",
    "contributes": {
        "commands": [
            {
                "command": "digitaljs.openView",
                "title": "Open DigitalJS",
                "icon": "imgs/digitaljs.svg",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.showPanel",
                "title": "Show DigitalJS Panel",
                "icon": "imgs/digitaljs.svg",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.revealCircuit",
                "title": "Show active circuit",
                "icon": "$(output-view-icon)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.pause",
                "title": "Pause",
                "icon": "$(debug-pause)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.start",
                "title": "Start",
                "icon": "$(debug-start)",
                "category": "DigitalJS"
            },
            {
                "command": "digitaljs.exportImage",
                "title": "Export Circuit As Image",
                "icon": "$(file-media)",
                "category": "DigitalJS"
            }
        ],
        "customEditors": [
            {
                "viewType": "digitaljs.circuitView_synthlogic",
                "displayName": "DigitalJS",
                "selector": [
                    {
                        "filenamePattern": "*.synthesizedlogic"
                    }
                ],
                "priority": "default"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "digitaljs.openView",
                    "when": "false"
                },
                {
                    "command": "digitaljs.showPanel",
                    "when": "false"
                },
                {
                    "command": "digitaljs.revealCircuit",
                    "when": "false"
                },
                {
                    "command": "digitaljs.pause",
                    "when": "false"
                },
                {
                    "command": "digitaljs.start",
                    "when": "false"
                },
                {
                    "command": "digitaljs.exportImage",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "digitaljs.exportImage",
                    "when": "view == digitaljs-proj-files",
                    "group": "navigation@2"
                }
            ],
            "editor/title": [
                {
                    "command": "digitaljs.openView",
                    "when": "!digitaljs.view_isfocus",
                    "group": "navigation"
                },
                {
                    "command": "digitaljs.showPanel",
                    "when": "digitaljs.view_isfocus",
                    "group": "navigation@0"
                },
                {
                    "command": "digitaljs.pause",
                    "when": "digitaljs.view_isfocus && digitaljs.view_hascircuit && digitaljs.view_running",
                    "group": "navigation@1"
                },
                {
                    "command": "digitaljs.start",
                    "when": "digitaljs.view_isfocus && digitaljs.view_hascircuit && !digitaljs.view_running",
                    "group": "navigation@1"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "digitaljs-container",
                    "title": "DigitalJS",
                    "icon": "imgs/digitaljs_mono.svg"
                }
            ]
        },
        "views": {
            "digitaljs-container": [
                {
                    "id": "digitaljs-proj-files",
                    "name": "Files",
                    "icon": "$(files)",
                    "when": "digitaljs.view_isactive",
                    "contextualTitle": "DigitalJS Files"
                },
                {
                    "id": "digitaljs-proj-synth",
                    "type": "webview",
                    "name": "Synthesis",
                    "icon": "$(gear)",
                    "when": "digitaljs.view_isactive",
                    "contextualTitle": "DigitalJS Synthesis"
                },
                {
                    "id": "digitaljs-proj-status",
                    "type": "webview",
                    "name": "Control",
                    "icon": "$(info)",
                    "when": "digitaljs.view_isactive || digitaljs.synthview_isactive",
                    "contextualTitle": "DigitalJS Control"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm-run-all compile:*",
        "compile:views": "webpack --mode production",
        "watch": "npm-run-all watch:*",
        "watch:webpack": "webpack --watch --mode development --devtool source-map",
        "watch-prod": "npm-run-all watch-prod:*",
        "watch-prod:webpack": "webpack --watch --mode production",
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js",
        "prepackage": "npm run compile",
        "package": "vsce package",
        "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ."
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "17.x",
        "@types/vscode": "^1.62.0",
        "@vscode/test-electron": "^2.1.3",
        "@vscode/test-web": "^0.0.24",
        "css-loader": "^6.7.1",
        "eslint": "^8.12.0",
        "expose-loader": "^3.1.0",
        "glob": "^7.2.0",
        "jquery": "^3.6.0",
        "mocha": "^9.2.2",
        "npm-run-all": "^4.1.5",
        "ovsx": "^0.3.0",
        "process": "^0.11.10",
        "sass-loader": "^12.6.0",
        "style-loader": "^3.3.1",
        "typescript": "^4.6.3",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.29",
        "@vscode/webview-ui-toolkit": "^0.9.3",
        "3vl": "^1.0.0",
        "assert": "^2.0.0",
        "backbone": "^1.4.1",
        "base64-arraybuffer": "^1.0.2",
        "crypto-browserify": "^3.12.0",
        "digitaljs": "github:digital-logic-and-computer-design/digitaljs",
        "digitaljs_lua": "github:digital-logic-and-computer-design/digitaljs_lua",
        "hammerjs": "^2.0.8",
        "jquery-ui": "^1.13.3",
        "lodash": "^4.17.21",
        "luaparse": "^0.3.1",
        "path-browserify": "^1.0.1",
        "resize-observer-polyfill": "^1.5.1",
        "sass": "^1.77.6",
        "split-grid": "^1.0.11",
        "stream-browserify": "^3.0.0",
        "svg-pan-zoom": "github:yuyichao/svg-pan-zoom",
        "util": "^0.12.4",
        "wavecanvas": "^1.1.0",
        "yosys2digitaljs": "^0.8.0",
        "yosysjs": "github:yuyichao/yosysjs"
    }
}
