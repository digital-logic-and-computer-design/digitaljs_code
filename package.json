{
    "name": "digitaljs",
    "displayName": "DigitalJS",
    "description": "DigitalJS integration for VS Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.62.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:digitaljs.openView"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "digitaljs.openView",
                "title": "Start DigitalJS",
                "icon": "imgs/digitaljs.svg"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "digitaljs.openView",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "digitaljs.openView"
                }
            ]
        },
        "configuration": {
            "title": "Digital JS",
            "properties": {
                "digitaljs.serverURL": {
                    "type": "string",
                    "default": "https://digitaljs.tilk.eu",
                    "description": "Digital JS server URL"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.62.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }

}
